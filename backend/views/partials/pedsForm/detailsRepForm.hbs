<div class="page-header">
    <h1>DETALLES DE LA ORDEN {{data.orden_id}}</h1>
</div>

<div class="form-container">
    <div class="form-body">
        <form class="row g-3">
            <div class="col-md-4">
                <label for="orden_id" class="form-label">Orden NÂ°</label>
                <input type="text" class="form-control" placeholder="id" id="orden_id" disabled
                    value="{{data.orden_id}}">
            </div>
            <div class="col-md-4">
                <label for="fecha" class="form-label">Fecha Ingreso</label>
                <input type="date" class="form-control" placeholder="Fecha Ingreso" id="fecha" name="fecha" disabled
                    value="{{data.fecha}}">
            </div>
            <div class="col-md-4">
                <label for="cliente_id" class="form-label">Cliente</label>
                <input type="text" class="form-control" placeholder="Cliente" id="cliente_id" name="cliente_id" disabled
                    value="{{data.cliente_id}} - {{data.nombre}}">
                    
            </div>
            <div class="col-md-4">
                <label for="equipo" class="form-label">Producto</label>
                <input type="text" class="form-control" placeholder="Equipo" id="equipo" name="equipo" disabled
                    value="{{data.equipo}}">
            </div>
            <div class="col-md-4">
                <label for="marca" class="form-label">Marca</label>
                <input type="text" class="form-control" placeholder="Marca" id="marca" name="marca" disabled
                    value="{{data.marca}}">
            </div>
            <div class="col-md-4">
                <label for="modelo" class="form-label">Modelo</label>
                <input type="text" class="form-control" placeholder="Modelo" id="modelo" name="modelo" disabled
                    value="{{data.modelo}}">
            </div>
            <div class="col-md-12">
                <label for="falla" class="form-label">Fallos</label>
                <textarea class="form-control" aria-label=="Falla" id="falla" name="falla"
                    disabled>{{data.falla}}</textarea>
            </div>
            <div class="col-md-12">
                <label for="reparacion" class="form-label">Pedidos</label>
                <textarea class="form-control" aria-label=="Reparacion" id="reparacion" name="reparacion"
                    disabled>{{data.reparacion}}</textarea>
            </div>
            <div class="col-md-4">
                <label for="costo" class="form-label">Costo</label>
                <input type="text" class="form-control" placeholder="Costo" id="costo" name="costo" disabled
                    value="{{data.costo}}">
            </div>
            <div class="col-md-4">
                <label for="presupuesto" class="form-label">Presupuesto</label>
                <input type="text" class="form-control" placeholder="Presupuesto" id="presupuesto" name="presupuesto"
                    disabled value="{{data.presupuesto}}">
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <label for="fecha_reparacion" class="form-label">Fecha Maxima</label>
                <input type="date" class="form-control" placeholder="Fecha Reparacion" id="fecha_reparacion"
                    name="fecha_reparacion" disabled value="{{data.fecha_reparacion}}">
            </div>
            <div class="col-md-4">
                <label for="fecha_entrega" class="form-label">Fecha Entrega</label>
                <input type="date" class="form-control" placeholder="Fecha Entrega" id="fecha_entrega"
                    name="fecha_entrega" disabled value="{{data.fecha_entrega}}">
            </div>
            <p class="text-danger">{{aviso}}</p>
            <div class="form-footer">
                <a type="button" class="btn btn-secondary" href="/reps">Cancelar</a>
                <a type="button" class="btn btn-primary" href="/reps/edit/{{data.orden_id}}">Modificar</a>
            </div>
        </form>
    </div>
</div>