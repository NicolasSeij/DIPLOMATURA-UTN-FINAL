<div class="page-header">
    <h1>NUEVO USUARIO</h1>
</div>

<div class="form-container">
    <div class="portrait">
       <img src="/images/genericUser.png" />
    </div>
    <div class="form-body">
        <form class="row g-3" action="/usuarios/" method="post" id="newUserForm" enctype="multipart/form-data">
            <div class="col-md-4">
                <label for="user_id" class="form-label">ID</label>
                <input type="text" class="form-control" placeholder="id" id="user_id" disabled>
            </div>
            <div class="col-md-8">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" placeholder="Nombre" id="nombre" name="nombre"
                    value="{{data.nombre}}" required>
            </div>
            <div class="col-md-6">
                <label for="username" class="form-label">Usuario</label>
                <input type="text" class="form-control" placeholder="Usuario" id="username" name="username"
                    value="{{data.username}}" required>
            </div>
            <div class="col-md-6">
                <label for="pass" class="form-label">Contraseña</label>
                <input type="text" class="form-control" placeholder="Contraseña" id="pass" name="pass" required>
            </div>
            <div class="col-md-6">
                <label for="img" class="form-label">Imagen</label>
                <input type="file" class="form-control" placeholder="Imagen" id="img" name="imgFile">
            </div>
            <div class="form-check col-md-3">
                <label class="form-check-label" for="es_empleado">Es Empleado?</label>
                <input type="checkbox" class="form-check-input" id="es_empleado" name="es_empleado" {{data.es_empleado}}>
            </div>
            <div class="form-check col-md-3">
                <label class="form-check-label" for="es_admin">Es Admin?</label>
                <input type="checkbox" class="form-check-input" id="es_admin" name="es_admin" {{data.es_admin}}>
            </div>
            <p class="text-danger">{{aviso}}</p>
            <div class="form-footer">
                <a type="button" class="btn btn-secondary" href="/usuarios">Cancelar</a>
                <button type="submit" class="btn btn-primary" id="btnSave">Guardar</button>
            </div>
        </form>
    </div>
</div>